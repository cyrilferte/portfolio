<%= simple_form_for @project do |f| %>
      <%= f.input :name, placeholder: "Name", label: "Project name" %>
      <%= f.input :tagline, placeholder: "Short resume", label: "Tagline" %>
      <%= f.input :link, as: :url, label: "link URL" %>
      <%= f.input :image, as: :url, label: "imag url" %>
      <%= f.input :stack,  placeholder: "stack", label: "stack" %>
      <%= f.button :submit, "ADD", class: "btn btn-primary btn-lg btn-block btn-color" %>
<% end %>